// to check a given number is Armstrong or not

void main()
{
    int a,b,c,d,x,y;
    printf("Enter a number to check it is Armstrong or not\n");
    scanf("%d",&x);

    a=x%10;
    y=x/10;
    b=y%10;
    c=y/10;

    d=(a*a*a)+(b*b*b)+(c*c*c);
    if (d==x)
    {
        printf("%d is an Armstrong number",x);
    }
    else
    {
        printf("%d is not an Armstrong number",x);
    }
getch();
}
